root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.sql]
indent_size = 2

[Makefile]
indent_style = tab