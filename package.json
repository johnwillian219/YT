{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "prisma:reset": "npx prisma migrate reset --force",
    "prisma:deploy": "npx prisma migrate deploy",
    "db:create": "createdb ninjatube_db || echo 'Database already exists or cannot create'",
    "db:seed": "node prisma/seed.js",
    "test:db": "node -e \"import('dotenv/config'); import('./src/infrastructure/database/client.js').then(m => m.checkDatabaseConnection().then(console.log).catch(console.error))\""
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "nodemon": "^3.0.1"
  },
  "devDependencies": {
    "prisma": "^5.7.0"
  }
}
